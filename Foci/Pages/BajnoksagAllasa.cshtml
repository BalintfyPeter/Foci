@page
@model Foci.Pages.BajnoksagAllasaModel
@{
    ViewData["Title"] = "Bajnokság Állása";
}

<h1>Bajnokság Állása</h1>

<table>
    <thead>
        <tr>
            <th>Helyezés</th>
            <th>Csapat Neve</th>
            <th>Játszott Mérkőzés</th>
            <th>Gyözelem</th>
            <th>Döntetlen</th>
            <th>Vereség</th>
            <th>Pontszám</th>
            <th>Lőtt Gól</th>
            <th>Kapott Gól</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.csapatEredmenyei.Count(); i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model.csapatEredmenyei[i].CsapatNev</td>
                <td></td>
                <td></td>
                <td>@Model.csapatEredmenyei[i].GyozelmekSzama</td>
            </tr>
        }
    </tbody>
</table>
